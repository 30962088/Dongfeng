<?xml version="1.0" encoding="UTF-8"?>
<TabHost 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:myxmlns="http://schemas.android.com/apk/res/com.etangdu.zhidao"
	android:id="@android:id/tabhost"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent">
        <FrameLayout 
        	android:id="@android:id/tabcontent"
        	android:layout_width="fill_parent" 
        	android:layout_height="fill_parent"
            android:layout_weight="1"/>
        <TabWidget
        	android:id="@android:id/tabs" 
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:layout_weight="0"
        	android:visibility="gone"
        		 />
        
        <LinearLayout android:orientation="horizontal"
        	android:id="@+id/main_group_radio"
			android:layout_width="fill_parent" 
			android:layout_height="@dimen/maintabs_bar_item_height"
			android:layout_gravity="bottom"
			>
			<com.media.dongfeng.view.BottomTabView
			    android:id="@+id/bottomTabView"
			    android:layout_height="fill_parent"
			    android:layout_width="fill_parent"
			    android:orientation="horizontal"
			    android:background="@drawable/bottom_tab_bg"
			    >
			    <LinearLayout
			        	android:id="@+id/btn_sucai_ly"
			        	android:layout_width="fill_parent"
			        	android:layout_height="fill_parent"
			        	android:layout_weight="1"
			        	android:orientation="vertical"
			        	android:background="@drawable/bottom_bg"
			        	android:clickable="true"
			        	android:gravity="center_vertical"
			        	>
				    <ImageView
				        android:id="@+id/btn_sucai"
				        android:layout_width="29dp"
				        android:layout_height="29dp"
				        android:background="@drawable/bottom_sucai"
				        android:scaleType="fitXY"
				        android:layout_gravity="center_horizontal"
				        	/>
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="素材库"
				        android:textColor="#a4a5a9"
				        android:textSize="9sp"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="2dp"
				        	/>
			    </LinearLayout>
			    
			    <LinearLayout
			        	android:id="@+id/btn_huodong_ly"
			        	android:layout_width="fill_parent"
			        	android:layout_height="fill_parent"
			        	android:layout_weight="1"
			        	android:orientation="vertical"
			        	android:background="@drawable/bottom_bg"
			        	android:clickable="true"
			        	android:gravity="center_vertical"
			        	>
				    <ImageView
				        android:id="@+id/btn_huodong"
				        android:layout_width="29dp"
				        android:layout_height="29dp"
				        android:background="@drawable/bottom_huodong"
				        android:scaleType="fitXY"
				        android:layout_gravity="center_horizontal"
			        		/>
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="消息提示"
				        android:textColor="#a4a5a9"
				        android:textSize="9sp"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="2dp"
				        	/>
			    </LinearLayout>
			    
			    <LinearLayout
			        	android:id="@+id/btn_shezhi_ly"
			        	android:layout_width="fill_parent"
			        	android:layout_height="fill_parent"
			        	android:layout_weight="1"
			        	android:orientation="vertical"
			        	android:background="@drawable/bottom_bg"
			        	android:clickable="true"
			        	android:gravity="center_vertical"
			        	>
				    <ImageView
				        android:id="@+id/btn_shezhi"
				        android:layout_width="29dp"
				        android:layout_height="29dp"
				        android:background="@drawable/bottom_shezhi"
				        android:scaleType="fitXY"
				        android:layout_gravity="center_horizontal"
			        		/>
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="设置"
				        android:textColor="#a4a5a9"
				        android:textSize="9sp"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="2dp"
				        	/>
			    </LinearLayout>
			</com.media.dongfeng.view.BottomTabView>
		</LinearLayout>
	</LinearLayout>
</TabHost>